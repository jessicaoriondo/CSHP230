@model Project1.Website.Models.ClassesViewModel

@*@{
    ViewBag.Title = "Classes";
}*@
<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>
    @foreach (var iclass in Model.Classes)
    {
        <tr>
            <td>
                @String.Format("{0}", iclass.Name)
            </td>
            <td>
                @String.Format("{0}", iclass.Description)
            </td>
            <td>
                @String.Format("{0:c}", iclass.Price)
            </td>
        </tr>
    }
</table>

